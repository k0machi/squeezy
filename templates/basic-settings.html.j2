{% extends "base.html.j2" %}

{% block app %}
<div class="container">
    <div class="row align-items-center justify-content-center">
        <h1>Basic Settings</h1>
    </div>
    <form action="{{url_for('main.basic_settings')}}" method="post">
        {{ form.csrf_token }}
        {{ form.http_port.label }} {{ form.http_port }}
        <input type="submit" value="Save">
    </form>
</div>
{% endblock app %}

{% block title %}
{{ super() }}: Basic Settings
{% endblock title %}
{% extends "base.html.j2" %}

{% block app %}
<div class="container">
    <div class="row align-items-center justify-content-center mb-2">
        <h1>Configuration Viewer</h1>
    </div>
    <div class="row">
        <div class="col">
            <h1>Current configuration: </h1>
            <pre class="file-view">
{{ content }}
            </pre>
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            <form action="{{url_for('main.reconfigure_squid')}}" method="post">
            <input type="submit" class="btn btn-danger" value="Reload Service">
            </form>
        </div>
    </div>
</div>
{% endblock app %}

{% block title %}
{{ super() }}: File View
{% endblock title %}